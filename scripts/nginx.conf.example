# Nginx configuration for FuniqLab Web
# Copy to: /etc/nginx/sites-available/funiqlab.com
# Enable with: sudo ln -s /etc/nginx/sites-available/funiqlab.com /etc/nginx/sites-enabled/
# Test with: sudo nginx -t
# Reload with: sudo systemctl reload nginx

# Main domains - redirect HTTP to HTTPS with explicit matching
server {
    listen 80;
    listen [::]:80;
    server_name www.funiqlab.com funiqlab.com;
    
    # Explicit redirect logic with precise domain matching
    location / {
        # Only redirect these specific domains to HTTPS
        if ($host = "www.funiqlab.com") {
            return 301 https://www.funiqlab.com$request_uri;
        }
        if ($host = "funiqlab.com") {
            return 301 https://www.funiqlab.com$request_uri;  # Redirect funiqlab.com to www
        }
        
        # If somehow other domains reach here, return 404
        return 404;
    }
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name www.funiqlab.com funiqlab.com;
    
    # SSL Configuration (adjust paths as needed)
    ssl_certificate /etc/letsencrypt/live/www.funiqlab.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/www.funiqlab.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
    
    # Modern SSL configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-CHACHA20-POLY1305;
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;
    ssl_session_tickets off;
    
    # HSTS (optional)
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    
    # Document root
    root /var/www/funiqlab-web;
    index index.html index.htm;
    
    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    add_header Content-Security-Policy "default-src 'self' http: https: data: blob: 'unsafe-inline'" always;
    
    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied expired no-cache no-store private must-revalidate auth;
    gzip_types
        text/plain
        text/css
        text/xml
        text/javascript
        application/javascript
        application/xml+rss
        application/json
        image/svg+xml;
    
    # Static files caching
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, no-transform";
        add_header Vary Accept-Encoding;
    }
    
    # Web App Manifest
    location = /site.webmanifest {
        expires 1d;
        add_header Cache-Control "public, no-transform";
        add_header Content-Type application/manifest+json;
    }
    
    # Main location block
    location / {
        try_files $uri $uri/ $uri.html =404;
        
        # Cache HTML files for a short time
        location ~* \.html$ {
            expires 1h;
            add_header Cache-Control "public, no-transform";
        }
    }
    
    # 404 error page
    error_page 404 /404.html;
    location = /404.html {
        internal;
    }
    
    # Deny access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # Deny access to backup files
    location ~* \.(bak|backup|old|tmp)$ {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # Robots.txt
    location = /robots.txt {
        allow all;
        log_not_found off;
        access_log off;
    }
    
    # Favicon
    location = /favicon.ico {
        log_not_found off;
        access_log off;
        expires 1y;
    }
    
    # Access and error logs
    access_log /var/log/nginx/funiqlab-web.access.log;
    error_log /var/log/nginx/funiqlab-web.error.log;
}
